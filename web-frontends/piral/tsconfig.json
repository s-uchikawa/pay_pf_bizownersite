{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
